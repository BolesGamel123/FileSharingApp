@model FileSharingApp.Models.UserViewModel
@inject IViewLocalizer Localizer




@if (!ViewContext.ModelState.IsValid)
{
    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
}

<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localizer["Title"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form asp-action="Info" asp-controller="Account" class="mu-contact-form">
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="text" asp-for="FirstName" class="form-control" placeholder="@Localizer["FirstName"]" id="FirstName" name="FirstName" required>
                                            <span asp-validation-for="FirstName"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="text" asp-for="LastName" class="form-control" placeholder="@Localizer["LastName"]" id="LastName" name="LastName" required>
                                            <span asp-validation-for="LastName"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" id="Email" name="Email" required readonly>
                                            <span asp-validation-for="Email"></span>
                                        </div>



                                        <button type="submit" class="btn btn-outline-primary"><span>@Localizer["Save"]</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

@if (Model.HasPassword)
{
    {await Html.RenderPartialAsync("_ChangePasswordPartial", new ChangePasswordViewModel());}
}
else{
{await Html.RenderPartialAsync("_AddPasswordPartial", new AddPasswordViewModel());}
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}