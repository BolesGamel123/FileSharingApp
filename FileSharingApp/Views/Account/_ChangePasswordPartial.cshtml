
@model FileSharingApp.Models.ChangePasswordViewModel
@inject IViewLocalizer Localizer




<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localizer["ManageTitle"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form asp-action="ChangePassword" asp-controller="Account" class="mu-contact-form">
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="password" asp-for="CurrentPassword" class="form-control" placeholder="@Localizer["CurrentPassword"]" id="CurrentPassword" name="CurrentPassword" required>
                                            <span asp-validation-for="CurrentPassword"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="@Localizer["NewPassword"]" id="NewPassword" name="NewPassword" required>
                                            <span asp-validation-for="NewPassword"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@Localizer["ConfirmPassword"]" id="ConfirmPassword" name="ConfirmPassword" required >
                                            <span asp-validation-for="ConfirmPassword"></span>
                                        </div>



                                        <button type="submit" class="btn btn-outline-primary"><span>@Localizer["Save"]</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
