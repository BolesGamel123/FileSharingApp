@model FileSharingApp.Models.LoginViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];

}




<hr />
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area" style="padding-top:0px">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localizer["Title"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form asp-action="Login" asp-route-returnUrl="@Context.Request.Query["returnUrl"]" class="mu-contact-form">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <span class="fa fa-user mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" id="Email" name="Email">
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="@Localizer["Password"]" id="Password" name="Password">
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                   


                                        <button type="submit" class="btn btn-outline-primary"><span>@Localizer["submit"]</span></button>
                                    </form>
                                </div>
                            </div>
                            <div class="row" style="padding-top:10px">
                                <div class="col-6">
                                    <a class="btn btn-outline-primary" asp-action="ExternalLogin" asp-route-Provider="Facebook" asp-controller="Account">@Localizer["Login With Facebook"]</a>
                                </div>
                                <div class="col-6">
                                    <a class="btn btn-outline-danger" asp-action="ExternalLogin" asp-route-Provider="Google" asp-controller="Account">@Localizer["Login With Google"]</a>
                                </div>

                            </div>

                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
